{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Schemes": {
      "Basic": {
        "Username": "admin",
        "Password": "secret123",
        "Realm": "SampleWebApi"
      },
      "ApiKey": {
        "HeaderName": "X-API-Key",
        "QueryParameterName": "api_key",
        "ValidApiKeyHeader": "api-key-header-abc123xyz",
        "ValidApiKeyQuery": "api-key-query-xyz789abc"
      },
      "CustomHeader": {
        "TokenHeaderName": "X-Custom-Auth-Token",
        "SessionHeaderName": "X-Custom-Session-Id",
        "ValidToken": "custom-token-12345",
        "ValidSessionId": "session-abc-xyz"
      },
      "Bearer": {
        "ValidAudiences": [
          "https://localhost:7259",
          "http://localhost:5259"
        ],
        "ValidIssuers": [
          "dotnet-user-jwts",
          "local-auth"
        ]
      },
      "OAuth2": {
        "TokenEndpoint": "/api/auth/oauth2/token",
        "ClientId": "test-client-id",
        "ClientSecret": "test-client-secret",
        "TokenPrefix": "oauth2-access-token-"
      }
    }
  }
}
